<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#2f6699" />
            <stroke
                android:width="1dp"
                android:color="#FFD41022" />
            <corners
                android:radius="3dp" />

        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:centerColor="#FFD41022"
                android:startColor="#FFD41022"
                android:endColor="#FFD41022"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#FFD41022"
             />
            <corners
                android:radius="4dp" />

        </shape>
    </item>
</selector>