<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nyu.blife_app.RegistrationAuthenticationActivity"
    android:background="#de99ac">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BLOOD REQUEST AUTHENTICATION"
        android:id="@+id/txtBRAuth"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="#34495e"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:textSize="20sp"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true" />


    <TextView
        android:text="Enter Verification Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1code"
        android:padding="16dp"
        android:textColor="#000000"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_above="@+id/verify_editText"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <com.rengwuxian.materialedittext.MaterialEditText
        android:textColorHint="#34495e"
        app:met_errorColor="#34495e"
        app:met_baseColor="#34495e"
        app:met_primaryColor="#FFD41022"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/verify_editText"
        android:hint="Enter Code"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/verify_editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRM"
            android:id="@+id/verify_button"
            android:textColor="#ffffffff"
            style="@style/ButtonText"
            android:background="@drawable/button_style"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_gravity="center_horizontal"
             />

    </LinearLayout>

</RelativeLayout>
