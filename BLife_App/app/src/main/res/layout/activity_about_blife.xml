<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nyu.blife_app.AboutBLifeActivity"
    android:background="#de99ac">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ABOUT B-LIFE"
        android:id="@+id/txtAboutprjct"
        android:gravity="center_horizontal"
        android:textColor="@android:color/white"
        android:background="#34495e"
        android:padding="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/aboutblifedetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:text="B-LIFE"
        android:gravity="center"
        android:textColor="#FFD41022"
        android:layout_below="@+id/txtAboutprjct"
        android:textSize="30sp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/aboutblifedetailstext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:text="B-Life is a an Android application that provides a communication platform to bridge the gap between the Blood Donors and Receivers, thereby ensuring timely service to those who need a particular blood group on a short notice."
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_below="@+id/aboutblifedetails"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />



    <TextView
        android:id="@+id/aboutblife"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:inputType="textMultiLine"
        android:text="B-LIFE Development Team:"
        android:gravity="center"
        android:textColor="#FFD41022"
        android:layout_below="@+id/aboutblifedetailstext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#000000"
        android:inputType="textMultiLine"
        android:text="# Pranav Bhoraskar"
        android:layout_below="@+id/aboutblife"
        android:id="@+id/aboutblife1"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#000000"
        android:inputType="textMultiLine"
        android:text="# Chaitanya Manyam"
        android:layout_below="@+id/aboutblife1"
        android:id="@+id/aboutblife2"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignStart="@+id/aboutblife1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#000000"
        android:inputType="textMultiLine"
        android:text="# Taranjeet Singh"
        android:layout_below="@+id/aboutblife2"
        android:id="@+id/aboutblife3"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignStart="@+id/aboutblife1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textColor="#000000"
        android:inputType="textMultiLine"
        android:text="# Yashwant Dasari"
        android:layout_below="@+id/aboutblife3"
        android:id="@+id/aboutblife4"
        android:layout_alignStart="@+id/aboutblife1"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>


</RelativeLayout>